<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/add_entry_dialog_layout"
    android:background="@drawable/bg_gameover2"
    android:layout_width="370dp"
    android:layout_height="300dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginHorizontal="20dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/stars"
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/three_star" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_scoreTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/fredokaone_regular"
        android:textColor="@color/yellow"
        android:layout_marginTop="20dp"
        android:textAlignment="center"
        android:textSize="30dp"
        android:text="Score" />
    <TextView
        android:id="@+id/tv_scoreNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/fredokaone_regular"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:textSize="50dp"
        android:text="50" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:gravity="center"
        >

        <FrameLayout
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_marginHorizontal="10dp"
            android:orientation="vertical">
            <ImageButton
                android:id="@+id/btn_return"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/returnbutton"
                android:text="Return" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Return"
                android:textSize="20dp"
                android:fontFamily="@font/fredokaone_regular"
                android:layout_marginTop="10dp"
                android:textColor="@color/pink_700"
                android:textAlignment="center"
                />
        </FrameLayout>

        <FrameLayout
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_marginHorizontal="10dp"
            android:orientation="vertical">
            <ImageButton
                android:id="@+id/btn_playAgain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/playagainbutton"
                android:text="Return" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Play Again"
                android:textSize="20dp"
                android:fontFamily="@font/fredokaone_regular"
                android:layout_marginTop="10dp"
                android:textColor="@color/pink_700"
                android:textAlignment="center"
                />
        </FrameLayout>
    </LinearLayout>



</LinearLayout>