<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cl_mainActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_portrait_main_acitvity"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tv_headsUpTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="30dp"
            android:fontFamily="@font/fredokaone_regular"
            android:text="Heads Up!"
            android:textColor="@color/yellow"
            android:textSize="50dp" />

        <FrameLayout
            android:id="@+id/fl_startButton"
            android:layout_width="200dp"
            android:layout_height="70dp"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/btn_start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/playbutton"
                android:text="Start" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/fredokaone_regular"
                android:text="Start"
                android:textAlignment="center"
                android:textColor="@color/purple_500"
                android:textSize="30dp" />
        </FrameLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="30dp" />

        <FrameLayout
            android:id="@+id/fl_addMore"
            android:layout_width="200dp"
            android:layout_height="70dp"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/btn_addMore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/playbutton"
                android:text="Add" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/fredokaone_regular"
                android:text="Add More"
                android:textAlignment="center"
                android:textColor="@color/purple_500"
                android:textSize="30dp" />
        </FrameLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>